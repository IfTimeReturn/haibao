.container{
  
}
.top-view{
  width: 100%;
  background: orangered;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.search-box{
    width: 80%;
    height: 60rpx;
    display: flex;
    align-items: center;
    /* justify-content: space-around; */
    border: 1px solid #fff;
    border-radius: 12rpx;
    margin:40rpx 0;
}
.search-content{
  flex: 1;
  padding-left: 20rpx;
  color: #fff;
  font-size: 14px;
}
.search-button{
  width: 60rpx;
  height: 60rpx;
  border-left: 2rpx solid #fff;
}
.xiaoketang{
  position: relative;
}
.xiaoketang-img{
  width: 640rpx;
  height: 240rpx;
}
.xiaoketang-right{
  position: absolute;
  left:200rpx;
  top: 0;
  width: 420rpx;
}
.new{
    text-align: right;
    color: #fe9c9b;
    font-style: italic;
}
.h1{
  font-size: 56rpx;
}
.detail{
  font-size: 14px;
  color: #666666;
}
.more{
  font-size: 14px;
  text-align: right;
}
.fenge-10{
  width: 100%;
  height: 20rpx;
  background: #efefef;
}
.fenge-5{
  width: 100%;
  height: 10rpx;
  background: #efefef;
}
.question{
  width: 100%;
  background: #fff;
}
.question-header{
  display: flex;
  align-items: center;
  flex-direction: row;
  /* width: 90%;
  margin: 0 auto; */
  padding: 40rpx;
  justify-content: space-between;
}
.header-left{
  flex: 1;
}
.qudati{
  width: 100px;
  height: 44px;
}
.header-left-title{
  color: red;
  font-size: 20px;
}
.header-left-detail{
  font-size: 12px;
}
.publish-question{
  padding: 40rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-top: 1px solid #eeeeee;
}
.publish-qusetion-content{
  border: 1px solid #fe9c9b;
  font-size: 12px;
  flex: 1;
  padding-left: 20rpx;
}
.tijiao{
  width: 88rpx;
  height: 40rpx;
  color: #fff;
  background: orangered;
  font-size: 14px;
  text-align: center;
  margin-left: 20rpx;
}
.question-item{
  width: 85%;
  margin: 0 auto;
  border: 1px solid #eee;
  border-radius: 20rpx;
  box-shadow: 2px 2px 2px #888888;
  margin-bottom: 20rpx;
  padding: 20rpx;
}
.question-title{
  font-size: 16px;
  font-weight: bold;
}
.question-anwser{
  color: #7d7d7d;
  font-size: 12px;
  margin-top: 10rpx;
}
.question-user-info{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.userInfo-left{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}
.touxiang{
  width: 36px;
  height: 36px;
}
.userName{
  display: block;
  font-size: 14px;
}
.time{
  font-size: 12px;
  color: #333333;
}
.userInfo-right{
  display: flex;
  align-items: center;
  flex-direction: row;
  font-size: 12px;
}
.icons-img{
  width: 26px;
  height: 26px;
  vertical-align: middle;
}
.icons{
  margin-left: 10rpx;
}
.see-allQuestion{
  width: 85%;
  text-align: right;
  font-size: 12px;
  color: #666666;
}
.sanjiao{
  width: 8px;
  height: 8px;
  vertical-align: middle;
  margin-left: 10rpx;
}
.topic{
  width: 100%;
}
.topic-header{
  font-size: 20px;
  color: red;
  text-align: left;
  justify-content: left;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.topic-item-header{
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}
.jing{
  width: 20px;
  height: 30px;
}
.guanzhu{
  width: 47px;
  height: 20px;
  margin-left: 20rpx;
}
.topic-title{
  width: 85%;
  margin: 0 auto;
  font-size: 16px;
  padding-top: 20rpx;
  font-weight: bold;
}
.topic-content{
  padding: 10rpx 20rpx 0;
  text-indent: 28px;
  font-size: 14px;
  word-wrap: break-word;
  color: #8d8d8d;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 5;
}
.topic-item-bottom{
  display: flex;
  flex-direction: row;
  justify-content: flex-end;
  padding: 20rpx;
  font-size: 14px;
  margin-left: 20rpx;
}